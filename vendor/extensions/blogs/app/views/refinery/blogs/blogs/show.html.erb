<% content_for :body_content_title do %>
  <%= @blog.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @blog.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @blog.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @blog.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @blog.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="blogs">
      <% @blogs.each do |blog| %>
        <li>
          <%= link_to blog.title, refinery.blogs_blog_path(blog) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
